<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="/media/css/template.css">
</head>
<body>
<header>
    <div class="container">
        <h1>ProgBlog</h1>
        {% if not auth.isAuth() %}
            <form action="/login" class="logform" method="post">
                {% if error is defined %}
                    <p class="error">{{ error }}</p>
                {% endif %}
                <dl>
                    <dt>Login:</dt>
                    <dd><input type="text" name="login" value="{{ login?login:'' }}"></dd>
                    <dt>Password:</dt>
                    <dd><input type="password" name="pass"></dd>
                    <dt><label for="remember">Remeber me</label></dt>
                    <dd><input type="checkbox" name="remember" id="remember"></dd>
                    <dd class="submit"><input type="submit" value="login"></dd>
                </dl>
            </form>
        {% endif %}
        <ul class="nav">
            <li><a href="/">Main</a></li>
            <li><a href="#">Themes</a></li>
            {% if auth.isAuth() %}
                <li class="right">
                    <a href="/logout">Logout</a>
                    <ul class="logMenu">
                        <li><a href="/deeplogout">Logout from everywhere</a></li>
                    </ul>
                </li>
                <li class="right">
                    <a href="/post/showall">My Posts</a>
                    <ul class="postMenu">
                        <li><a href="/post/new">New Post</a></li>
                    </ul>
                </li>
            {% else %}
                <li class="right"><a href="/register">Regestration</a></li>
            {% endif %}
        </ul>
    </div>
</header>
<div class="content">
    <div class="container">
        <div class="main">{{ view| raw }}</div>
        <div class="right">{{ rightmenu|raw }}</div>
    </div>
</div>
<footer>
    <div class="container">
        <h2>&copy; FD SPRING 2017</h2>
    </div>
</footer>
</body>
</html>