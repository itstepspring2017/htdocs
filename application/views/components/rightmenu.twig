<style>
    .right>ul{
        list-style: none;
        padding-top: 30px;
    }
    .right>ul>li>a{
        width: 100px;
        padding: 5px;
        line-height: 30px;
        text-transform: uppercase;
        color: white;
        text-decoration: none;
        display: inline-block;
        text-align: center;
    }
    .right>ul>li>span{
        display: inline-block;
        width: 60px;
        height: 40px;
        background-size: contain;
        background-position: center;
        background-repeat: no-repeat;
    }
</style>
<ul>
    {% for category in categories %}
        <li>
            <span style="background-image: url('{{ category.getImage().url }}')"></span>
            <a href="/categories/{{ category.id }}">{{ category.name }}</a></li>
    {% endfor %}
</ul>
